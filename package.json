{
  "name": "clivo",
  "version": "0.5.1",
  "description": "Simple CLI tools library",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cinnabar-forge/clivo.git"
  },
  "license": "ISC",
  "author": {
    "name": "Timur Moziev",
    "email": "timur.moziev@gmail.com",
    "url": "https://timurrin.github.io"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:dev": "tsc",
    "fix": "prettier . --write && eslint --fix .",
    "format": "prettier . --write",
    "lint": "eslint --fix .",
    "prepack": "npm run build",
    "test": "prettier . -c && eslint --max-warnings 0 . && tsc && mocha './build/dev/test'"
  },
  "devDependencies": {
    "@cinnabar-forge/eslint-plugin": "0.6.1",
    "@cinnabar-forge/meta": "0.3.1",
    "@types/chai": "4.3.16",
    "@types/mocha": "10.0.7",
    "@types/node": "22.0.0",
    "@types/sinon": "17.0.3",
    "chai": "5.1.1",
    "mocha": "10.7.0",
    "pre-commit": "1.2.2",
    "sinon": "18.0.0",
    "tsc-watch": "6.2.0",
    "tsup": "8.2.3",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "pre-commit": [
    "format",
    "test"
  ]
}
