    "chai": "5.1.1",
    "mocha": "10.4.0",
    "pre-commit": "1.2.2",
    "sinon": "18.0.0",
    "tsc-watch": "6.2.0",
    "typescript": "5.4.5"
  },
  "pre-commit": [
    "format",
    "test"
  ]
